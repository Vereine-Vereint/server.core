#cloud-config

autoinstall:
  version: 1
  # interactive-sections:
  #  - network
  storage: # This should set the interactive (lvm set) default
    layout:
      name: lvm
      match:
        size: largest
  locale: en_US.UTF-8
  timezone: Europe/Berlin
  keyboard:
    layout: de

  user-data:
    hostname: ${HOSTNAME}
    swap:
      filename: /swap.img
      size: "auto" # or size in bytes
      maxsize: ${SWAP_SIZE}
    users:
    - name: ${USER_NAME}
      groups: users,admin
      sudo: ALL=(ALL) NOPASSWD:ALL
      shell: /bin/bash
      lock_passwd: false
      plain_text_passwd: ${USER_PASSWORD}
      ssh_authorized_keys:
      - ${SSH_ADMIN_PUBLIC_KEY}

  apt:
    primary:
    - arches: [default]
      uri: http://de.archive.ubuntu.com/ubuntu/
  updates: all
  ssh:
    install-server: true
    allow-pw: false
  network:
    version: 2
    ethernets:
      # enp0s3: # VM
      #   dhcp4: true
      ens3: # 1blu SERVER
        addresses:
        - ${IP_ADDRESS_WITH_CIDR}
        routes:
        - to: default
          via: ${GATEWAY}
        nameservers:
          addresses: [${NAMESERVERS}]

  shutdown: reboot # reboot after installation
